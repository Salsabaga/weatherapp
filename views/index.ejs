<%- include("header"); -%>


  <div class ="container">
    <div class="top-container">
      <div id="searchbar">
        <form action="/" method="post">
        <input type="text" name="searchbar" placeholder="enter your city here">
        </form> 
      </div>
    </div>

    <div class="middle-container">
      <div class="cityname">
        <% if (city===null) { %>
          <h1><%="What's the weather like?"%></h1>
        <% } else { %>         
          <h1><%= city %></h1>
          <img class="icon" src="http://openweathermap.org/img/wn/<%=weatherIcon%>@2x.png" >
          <h1><%=currentDay%></h1>
        <% } %>                   
      </div>
    </div>    
        
      <div class="bottom-container">
        <div class="main-detail">
          <% if (weatherTemp===null) { %>
           <p class="no-data">Let's find out</p>
          <% } %>       
          <div class="temp">
            <% if (weatherTemp!==null) { %>
              <p><%=weatherTemp%>&#8451</p>
    
            <% } %>
          </div>
          <div class="description">
            <% if (weatherDescrip!==null) { %>
              <p><%=weatherDescrip%></p>
            <% } %>     
          </div>
        </div>
        <div class="detail">
          <% if (weatherWind!==null) { %>
            <div class="wind">
              <p><%=weatherWind%> m/s</p>
              <h2>Wind</h2>
            </div>
            
          <% } %>  
          <div class="humidity">
            <% if (weatherHumid!==null) { %>
             <p><%=weatherHumid%></p>
             <h2>Humidity</h2>
            <% } %>
          </div>
          <div class="sunrise">
            <% if (sunrise!==null) { %>
              <p><%=sunrise%></p>
              <h2>Sunrise</h2>
            <% } %>           
          </div> 
          <div class="sunset">
            <% if (sunset!==null) { %>
              <p><%=sunset%></p>
              <h2>Sunset</h2>
             <% } %>
          </div>     
        </div>
      </div>
      
 
      
  </div>

    
<%- include("footer"); -%>